<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Circle Fill -->
    <solid android:color="#66424141" /> <!-- semi-transparent black -->

    <!-- Optional Padding inside circle -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

    <!-- Optional border around circle -->
    <stroke
        android:width="1dp"
        android:color="#33857D7D" /> <!-- lighter transparent outline -->
</shape>
