<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Status Bar -->
    <include
        layout="@layout/statusbar"
        android:id="@+id/statusbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <!-- Chat Header -->
    <RelativeLayout
        android:id="@+id/chatHeader"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/statusbar"
        android:paddingHorizontal="12dp"
        android:gravity="center_vertical">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <!-- Profile Pic -->
        <ImageView
            android:id="@+id/chatProfilePic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_profile"
            android:scaleType="centerCrop"
            android:layout_toEndOf="@id/backArrow"
            android:layout_marginStart="12dp"
            android:layout_centerVertical="true" />

        <!-- Name -->
        <TextView
            android:id="@+id/chatName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="joshua_l"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_toEndOf="@id/chatProfilePic"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true" />

        <!-- Video Call Icon -->
        <ImageView
            android:id="@+id/videoCall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_videocall"
            android:layout_toStartOf="@id/infoIcon"
            android:layout_marginEnd="16dp"
            android:layout_centerVertical="true" />

        <!-- Info Icon -->
        <ImageView
            android:id="@+id/infoIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_info"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <!-- Chat Body -->
    <ScrollView
        android:id="@+id/chatScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/chatHeader"
        android:layout_above="@id/messageBar"
        android:fillViewport="true"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom">

            <!-- Time -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4:49 PM"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp" />

            <!-- Message Bubble -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello"
                android:textColor="@android:color/white"
                android:background="@drawable/message_bubble_maroon"
                android:padding="12dp"
                android:textSize="20sp"
                android:layout_gravity="end" />
        </LinearLayout>
    </ScrollView>

    <!-- Message Bar -->
    <LinearLayout
        android:id="@+id/messageBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@id/homeIndicator"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:gravity="center_vertical">

        <!-- Camera -->
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_camera"
            android:layout_marginEnd="8dp" />

        <!-- Message Input -->
        <EditText
            android:id="@+id/messageInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Message..."
            android:background="@drawable/message_input_bg"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:textSize="16sp" />

        <!-- Mic -->
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_mic"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <!-- Image -->
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_image"
            android:layout_marginEnd="8dp" />

        <!-- GIF -->
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_gif" />
    </LinearLayout>

    <!-- Home Indicator -->
    <include
        android:id="@+id/homeIndicator"
        layout="@layout/home_indicator"
        android:layout_width="100dp"
        android:layout_height="6dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
