<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavBarSearch"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Status Bar -->
            <include
                layout="@layout/statusbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Search Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:background="#F2F2F2">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search"
                    app:tint="#732020"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Search"
                    android:textSize="16sp"
                    android:textColor="#888888" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_scan" />
            </LinearLayout>

            <!-- Categories -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shop"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:textColor="#732020"
                        android:textStyle="bold"
                        android:background="@drawable/category_background"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Style"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:textColor="#732020"
                        android:textStyle="bold"
                        android:background="@drawable/category_background"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sports"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:textColor="#732020"
                        android:textStyle="bold"
                        android:background="@drawable/category_background"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Auto"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:textColor="#732020"
                        android:textStyle="bold"
                        android:background="@drawable/category_background"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Music"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:textColor="#732020"
                        android:textStyle="bold"
                        android:background="@drawable/category_background"/>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Explore Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:padding="4dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/post1"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/post2"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/post3"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/post1"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/post2"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/post3"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/post1"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/post2"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/post3"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/post1"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/post2"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/post3"/>

                <!-- Add more as needed -->
            </GridLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation (search version) -->
    <include
        layout="@layout/bottom_nav_search"
        android:id="@+id/bottomNavBarSearch"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true" />

    <!-- Home Indicator -->
    <include
        layout="@layout/home_indicator"
        android:layout_width="100dp"
        android:layout_height="6dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
