<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8A2828"> <!-- light maroon background -->

    <!-- Custom Status Bar -->
    <include
        android:id="@+id/statusBar"
        layout="@layout/statusbar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Scrollable form BELOW status bar -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/statusBar"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Back Arrow -->
            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/baseline_arrow_back_24"
                android:contentDescription="Back"
                android:layout_marginBottom="16dp" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Socially"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="10dp" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create An Account and Sign Up"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="20dp" />

            <!-- Round Profile Image -->
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/add_image"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_marginBottom="20dp" />

            <!-- All your input fields remain SAME -->
            <!-- Username -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@android:color/white" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter username"
                android:background="@null"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"
                android:layout_marginBottom="12dp" />

            <!-- Your Name --> <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Your Name" android:textColor="@android:color/white" /> <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Enter your name" android:background="@null" android:textColorHint="@android:color/white" android:textColor="@android:color/white" /> <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@android:color/white" android:layout_marginBottom="12dp" /> <!-- Last Name --> <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Your Last Name" android:textColor="@android:color/white" /> <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Enter last name" android:background="@null" android:textColorHint="@android:color/white" android:textColor="@android:color/white" /> <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@android:color/white" android:layout_marginBottom="12dp" /> <!-- Date of Birth --> <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Date of Birth" android:textColor="@android:color/white" /> <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="dd/mm/yyyy" android:background="@null" android:textColorHint="@android:color/white" android:textColor="@android:color/white" /> <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@android:color/white" android:layout_marginBottom="12dp" /> <!-- Email --> <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Email" android:textColor="@android:color/white" /> <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Enter email" android:background="@null" android:textColorHint="@android:color/white" android:textColor="@android:color/white" android:inputType="textEmailAddress" /> <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@android:color/white" android:layout_marginBottom="12dp" /> <!-- Password --> <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Password" android:textColor="@android:color/white" /> <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Enter password" android:background="@null" android:textColorHint="@android:color/white" android:textColor="@android:color/white" android:inputType="textPassword" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"
                android:layout_marginBottom="20dp" />

            <!-- Create Account Button -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create An Account"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#800000"
                android:layout_marginTop="10dp" />

        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/home_indicator"
        android:layout_width="150dp"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"/>

</RelativeLayout>
